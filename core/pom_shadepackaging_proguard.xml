        	<dependencies>
          		<dependency>
            		<groupId>net.sf.proguard</groupId>
		            <artifactId>proguard-base</artifactId>
		            <version>5.1</version>
            		<scope>runtime</scope>
          		</dependency>
        	</dependencies>
      	</plugin>
    </plugins>
  </build>
  
  <organization>
  	<url>http://fullcirclesolutions.com.au</url>
  	<name>Full Circle</name>
  </organization>
</project>